<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/trip_time"
                android:layout_width="wrap_content"
                android:text="2014-09-12   17:00"
                android:layout_marginLeft="15dp"
                android:textColor="@color/color333"
                android:textSize="16sp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/trip_status"
                android:layout_width="wrap_content"
                android:text="已完成"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/xiandan_bulepositioning"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/start_place"
                android:layout_width="wrap_content"
                android:text="宝安新区—南海大道1065号"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/xiandan_redpositioning"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/end_place"
                android:layout_width="wrap_content"
                android:text="宝安新区—南海大道1065号"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
