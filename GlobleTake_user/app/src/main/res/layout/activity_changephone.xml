<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/root_lay"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/back_relay"
            android:layout_width="@dimen/backimg_parent_width"
            android:layout_height="@dimen/backimg_parent_height">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/gerenxinxi_xiangzuo"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/backimg_marginleft"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/title_changephone"
            android:textColor="@color/color333"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/shoujihao_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/currentphone_tv"
            android:layout_width="wrap_content"
            android:text="当前手机号为：18277750576"
            android:textSize="16sp"
            android:textColor="@color/color333"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/change_tip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/changephone_btn"
            android:layout_width="match_parent"
            android:text="@string/btn_changphone"
            android:textSize="19sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_jifeiritem_bg"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
