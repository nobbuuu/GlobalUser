<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/home_lay"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/address_icon"
                android:layout_width="118px"
                android:background="@mipmap/changyongdizhi_home"
                android:layout_height="118px" />

            <TextView
                android:id="@+id/address_type"
                android:layout_width="wrap_content"
                android:text="家庭"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/home_midlay"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/home_lay"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/myaddress_nextrelay_home"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/myaddress_tv1"
                android:layout_width="wrap_content"
                android:text="@string/tv_sethomeaddress"
                android:textColor="@color/statecolor"
                android:textSize="15sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/myaddress_tv2"
                android:layout_width="wrap_content"
                android:text="@string/tv_zanwu"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/myaddress_nextrelay_home"
            android:layout_width="40dp"
            android:layout_gravity="end"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/changyongdizhi_xiangyou"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
