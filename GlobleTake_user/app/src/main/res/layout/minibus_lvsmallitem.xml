<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/che_img"
            android:layout_width="30dp"
            android:src="@mipmap/che"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/carnum_drivername"
            android:layout_width="wrap_content"
            android:text="DKSJD---DJKSAF"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="@color/color666"
            android:layout_toRightOf="@+id/che_img"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/driver_phonenum"
            android:layout_width="wrap_content"
            android:text=" 1827775016"
            android:layout_toLeftOf="@+id/right_phone"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:textColor="@color/color666"
            android:layout_centerVertical="true"
           android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/right_phone"
            android:layout_width="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/dianhua"
            android:layout_centerVertical="true"
            android:layout_height="25dp" />
    </RelativeLayout>

</LinearLayout>
